<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.roltekk.daydream.gameoflife"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <service
            android:name=".GameOfLifeDaydreamService"
            android:exported="true"
            android:label="Game Of Life"
            android:permission="android.permission.BIND_DREAM_SERVICE">
            <intent-filter>
                <category android:name="android.intent.category.DEFAULT"/>
                <action android:name="android.service.dreams.DreamService"/>
            </intent-filter>

            <meta-data
                android:name="android.service.dream"
                android:resource="@xml/settings_activity"/>
        </service>

        <activity
            android:name=".SettingsActivity"
            android:excludeFromRecents="true"
            android:label="@string/app_name"
            android:theme="@style/SettingsTheme"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <!--<category android:name="android.intent.category.DEFAULT"/>-->
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity
            android:name=".TestSettingsActivity"
            android:label="@string/app_name"
            android:theme="@style/AppThemeDevelopment">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".DevelopmentActivity"
            android:label="@string/app_name"
            android:theme="@style/AppThemeDevelopment">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.DEFAULT"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
    </application>
</manifest>
